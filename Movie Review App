MovieDetails.jsx

// src/components/MovieDetails.jsx
// MovieDetails component displays detailed info for a selected movie
// Uses semantic tags and TailwindCSS for styling
import React from 'react';

/**
 * MovieDetails displays detailed info for a movie, including cast and release details.
 * @param {Object} props
 * @param {Object} props.movie - Movie object from TMDB API
 * @param {function} props.onClose - Handler to close the details view
 */
/**
 * MovieDetails displays detailed info for a movie, including cast and release details.
 * Handles errors gracefully and follows W3C code documentation best practices.
 * @param {Object} props
 * @param {Object} props.movie - Movie object from TMDB API
 * @param {function} props.onClose - Handler to close the details view
 */
export default function MovieDetails({ movie, onClose }) {
  if (!movie) return null;
  let posterUrl = '/placeholder.png';
  try {
    if (movie.poster_path) {
      posterUrl = `https://image.tmdb.org/t/p/w500${movie.poster_path}`;
    }
  } catch (err) {
    // Log error for debugging
    console.error('Error resolving poster URL:', err);
  }
  let genres = '';
  try {
    genres = movie.genres?.map(g => g.name).join(', ');
  } catch (err) {
    genres = '';
  }
  let cast = [];
  try {
    cast = movie.credits?.cast?.slice(0, 6) || [];
  } catch (err) {
    cast = [];
  }
  return (
    <aside className="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50" aria-modal="true" role="dialog">
      <div className="bg-white rounded-lg shadow-lg max-w-2xl w-full p-6 relative">
        <button
          onClick={onClose}
          className="absolute top-2 right-2 text-gray-500 hover:text-gray-800 text-2xl"
          aria-label="Close details"
        >
          &times;
        </button>
        <div className="flex flex-col md:flex-row gap-6">
          <img
            src={posterUrl}
            alt={movie.title}
            className="w-40 h-60 object-cover rounded"
          />
          <div className="flex-1">
            <header>
              <h2 className="text-2xl font-bold mb-2">{movie.title}</h2>
              <p className="text-gray-600 mb-2">{movie.release_date} | {movie.runtime} min</p>
              <p className="mb-2">{genres}</p>
            </header>
            <section className="mb-4">
              <h3 className="font-semibold mb-1">Overview</h3>
              <p className="text-gray-700">{movie.overview}</p>
            </section>
            <section>
              <h3 className="font-semibold mb-1">Cast</h3>
              <ul className="flex flex-wrap gap-2">
                {cast.map(actor => (
                  <li key={actor.cast_id} className="text-sm bg-gray-200 rounded px-2 py-1">
                    {actor.name} <span className="text-gray-500">({actor.character})</span>
                  </li>
                ))}
              </ul>
            </section>
          </div>
        </div>
      </div>
    </aside>
  );
}

==============================================================================================================================================================================================================================================================================
MovieCard.jsx

// src/components/MovieCard.jsx
// MovieCard component displays a single movie's basic info
// Uses semantic tags and TailwindCSS for styling
import React, { useState, useEffect, useCallback } from 'react';
import StarRating from './StarRating';

/**
 * Custom hook for persisting a value in localStorage.
 */
function useLocalStorage(key, initialValue) {
  const [value, setValue] = useState(() => {
    const saved = localStorage.getItem(key);
    return saved !== null ? Number(saved) : initialValue;
  });

  useEffect(() => {
    if (value > 0) localStorage.setItem(key, value);
  }, [key, value]);

  return [value, setValue];
}

/**
 * MovieCard displays a movie's poster, title, year, and rating.
 * @param {Object} props
 * @param {Object} props.movie - Movie object from TMDB API
 */
export default function MovieCard({ movie }) {
  const [userRating, setUserRating] = useLocalStorage(`rating_${movie.id}`, 0);
  const average = movie.vote_average ? movie.vote_average / 2 : undefined;

  const handleRating = useCallback((star) => setUserRating(star), [setUserRating]);

  return (
    <article className="bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-full" aria-label={movie.title}>
      <img
        src={movie.poster_path ? `https://image.tmdb.org/t/p/w500${movie.poster_path}` : '/placeholder.png'}
        alt={movie.title}
        className="w-full h-64 object-cover"
      />
      <div className="p-4 flex-1 flex flex-col justify-between">
        <header>
          <h2 className="text-lg font-bold mb-2" title={movie.title}>{movie.title}</h2>
          <p className="text-sm text-gray-500">{movie.release_date?.slice(0, 4) || 'N/A'}</p>
        </header>
        <footer className="mt-2">
          <StarRating value={userRating} onChange={handleRating} average={average} />
        </footer>
      </div>
    </article>
  );
}

==============================================================================================================================================================================================================================================================================
FilterBar.jsx

// src/components/FilterBar.jsx
// FilterBar component for filtering movies by genre, year, and rating
// Uses semantic tags and TailwindCSS for styling
import React from 'react';

/**
 * FilterBar allows users to filter movies by genre, year, and rating.
 * @param {Object} props
 * @param {Array} props.genres - List of genres
 * @param {string} props.selectedGenre - Selected genre
 * @param {function} props.onGenreChange - Handler for genre change
 * @param {string} props.selectedYear - Selected year
 * @param {function} props.onYearChange - Handler for year change
 * @param {string} props.selectedRating - Selected rating
 * @param {function} props.onRatingChange - Handler for rating change
 */
export default function FilterBar({ genres, selectedGenre, onGenreChange, selectedYear, onYearChange, selectedRating, onRatingChange }) {
  // Generate years from 1980 to current year
  const years = Array.from({ length: new Date().getFullYear() - 1979 }, (_, i) => (1980 + i).toString());
  const ratings = ['1', '2', '3', '4', '5'];

  return (
    <section className="flex flex-wrap gap-4 mb-6" aria-label="Filter Movies">
      <div>
        <label htmlFor="genre" className="block text-sm font-medium text-gray-700 mb-1">Genre</label>
        <select
          id="genre"
          value={selectedGenre}
          onChange={e => onGenreChange(e.target.value)}
          className="px-3 py-2 border border-gray-300 rounded-md"
        >
          <option value="">All</option>
          {genres.map(genre => (
            <option key={genre.id} value={genre.id}>{genre.name}</option>
          ))}
        </select>
      </div>
      <div>
        <label htmlFor="year" className="block text-sm font-medium text-gray-700 mb-1">Year</label>
        <select
          id="year"
          value={selectedYear}
          onChange={e => onYearChange(e.target.value)}
          className="px-3 py-2 border border-gray-300 rounded-md"
        >
          <option value="">All</option>
          {years.map(year => (
            <option key={year} value={year}>{year}</option>
          ))}
        </select>
      </div>
      <div>
        <label htmlFor="rating" className="block text-sm font-medium text-gray-700 mb-1">Min Rating</label>
        <select
          id="rating"
          value={selectedRating}
          onChange={e => onRatingChange(e.target.value)}
          className="px-3 py-2 border border-gray-300 rounded-md"
        >
          <option value="">All</option>
          {ratings.map(rating => (
            <option key={rating} value={rating}>{rating}+</option>
          ))}
        </select>
      </div>
    </section>
  );
}


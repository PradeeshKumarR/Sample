==============================================================================================================================================================================================================================================================================
useFetchGenres.js

// src/hooks/useFetchGenres.js
// Custom React hook to fetch movie genres from TMDB API
// Uses semantic tags, robust error handling, and W3C code documentation best practices
import { useState, useEffect } from 'react';
import { API_KEY, BASE_URL } from './apiConfig';

/**
 * Fetches a list of movie genres from TMDB API.
 * @returns {Object} { genres, loading, error }
 */
export function useFetchGenres() {
  const [genres, setGenres] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    /**
     * Fetch genres from TMDB API with error handling.
     * Uses async/await and try/catch for robust error reporting.
     */
    async function fetchGenres() {
      setLoading(true);
      setError(null);
      try {
        const url = `${BASE_URL}/genre/movie/list?api_key=${API_KEY}`;
        const response = await fetch(url);
        if (!response.ok) throw new Error('Failed to fetch genres.');
        const data = await response.json();
        setGenres(Array.isArray(data.genres) ? data.genres : []);
      } catch (err) {
        if (err.name === 'TypeError') {
          setError('Network error while fetching genres.');
        } else if (err instanceof SyntaxError) {
          setError('Error parsing genre data.');
        } else {
          setError(err.message || 'Unknown error occurred while fetching genres.');
        }
      } finally {
        setLoading(false);
      }
    }
    fetchGenres();
  }, []);

  return { genres, loading, error };
}

==============================================================================================================================================================================================================================================================================
useFetchMovieDetails.js

// src/hooks/useFetchMovieDetails.js
// Custom React hook to fetch detailed info for a single movie from TMDB API
// Uses semantic tags, robust error handling, and W3C code documentation best practices
import { useState, useEffect } from 'react';
import { API_KEY, BASE_URL } from './apiConfig';

/**
 * Fetches detailed info for a single movie from TMDB API.
 * @param {number|string} movieId - The TMDB movie ID
 * @returns {Object} { movie, loading, error }
 */
export function useFetchMovieDetails(movieId) {
  const [movie, setMovie] = useState(null);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    if (!movieId) return;
    /**
     * Fetch movie details from TMDB API with error handling.
     * Uses async/await and try/catch for robust error reporting.
     */
    async function fetchDetails() {
      setLoading(true);
      setError(null);
      try {
        const url = `${BASE_URL}/movie/${movieId}?api_key=${API_KEY}&append_to_response=credits`;
        const response = await fetch(url);
        if (!response.ok) throw new Error('Failed to fetch movie details.');
        const data = await response.json();
        setMovie(data);
      } catch (err) {
        if (err.name === 'TypeError') {
          setError('Network error while fetching movie details.');
        } else if (err instanceof SyntaxError) {
          setError('Error parsing movie details data.');
        } else {
          setError(err.message || 'Unknown error occurred while fetching movie details.');
        }
      } finally {
        setLoading(false);
      }
    }
    fetchDetails();
  }, [movieId]);

  return { movie, loading, error };
}

==============================================================================================================================================================================================================================================================================
useFetchMovies.js

// src/hooks/useFetchMovies.js
// Custom React hook to fetch movies from TMDB API
// Uses semantic tags, robust error handling, and W3C code documentation best practices
import { useState, useEffect } from 'react';
import { API_KEY, BASE_URL } from './apiConfig';

/**
 * Fetches a list of movies from TMDB API.
 * @param {string} query - Search query for movies.
 * @returns {Object} { movies, loading, error }
 */
export function useFetchMovies(query = '') {
  const [movies, setMovies] = useState([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState(null);

  useEffect(() => {
    /**
     * Fetch movies from TMDB API with error handling.
     * Uses async/await and try/catch for robust error reporting.
     */
    async function fetchMovies() {
      setLoading(true);
      setError(null);
      try {
        let url;
        if (query) {
          url = `${BASE_URL}/search/movie?api_key=${API_KEY}&query=${encodeURIComponent(query)}`;
        } else {
          url = `${BASE_URL}/movie/popular?api_key=${API_KEY}`;
        }
        const response = await fetch(url);
        if (!response.ok) throw new Error('Failed to fetch movies.');
        const data = await response.json();
        setMovies(Array.isArray(data.results) ? data.results : []);
      } catch (err) {
        if (err.name === 'TypeError') {
          setError('Network error while fetching movies.');
        } else if (err instanceof SyntaxError) {
          setError('Error parsing movie data.');
        } else {
          setError(err.message || 'Unknown error occurred while fetching movies.');
        }
      } finally {
        setLoading(false);
      }
    }
    fetchMovies();
  }, [query]);

  return { movies, loading, error };
}

==============================================================================================================================================================================================================================================================================
StarRating.jsx

// src/components/StarRating.jsx
// StarRating component for displaying and setting user ratings
// Uses semantic tags and TailwindCSS for styling
import React, { useCallback } from 'react';

/**
 * StarRating allows users to rate a movie and displays the average rating.
 * Follows W3C code documentation best practices.
 * @param {Object} props
 * @param {number} props.value - Current user rating (1-5)
 * @param {function} props.onChange - Handler for rating change
 * @param {number} [props.average] - Average rating (optional)
 */
function StarRating({ value = 0, onChange, average }) {
  const handleClick = useCallback((star) => () => onChange(star), [onChange]);
  // Render 5 stars, highlight up to the current value
  return (
    <div className="flex items-center gap-2" aria-label="Star rating">
      {[1, 2, 3, 4, 5].map((star) => (
        <button
          key={star}
          type="button"
          className={`text-2xl focus:outline-none ${value >= star ? 'text-yellow-400' : 'text-gray-300'}`}
          onClick={handleClick(star)}
          aria-label={`Rate ${star} star${star > 1 ? 's' : ''}`}
        >
          ★
        </button>
      ))}
      {average !== undefined && (
        <span className="ml-2 text-sm text-gray-600">Avg: {average.toFixed(1)}</span>
      )}
    </div>
  );
}

export default React.memo(StarRating);


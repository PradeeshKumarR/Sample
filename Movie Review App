MovieList.jsx

// src/pages/MovieList.jsx
// MovieList page displays a grid of movies using MovieCard
// Uses semantic tags and TailwindCSS for layout
import React, { useState, useMemo } from 'react';
import { useFetchMovies } from '../hooks/useFetchMovies';
import { useFetchGenres } from '../hooks/useFetchGenres';
import MovieCard from '../components/MovieCard';
import MovieDetails from '../components/MovieDetails';
import { useFetchMovieDetails } from '../hooks/useFetchMovieDetails';
import SearchBar from '../components/SearchBar';
import FilterBar from '../components/FilterBar';

/**
 * MovieList displays a grid of movies fetched from TMDB API.
 * Handles search, filtering, and details view with robust error handling and W3C code documentation best practices.
 */
export default function MovieList() {
  // State for search, filters, and selected movie
  const [search, setSearch] = useState('');
  const [selectedGenre, setSelectedGenre] = useState('');
  const [selectedYear, setSelectedYear] = useState('');
  const [selectedRating, setSelectedRating] = useState('');
  const [selectedMovieId, setSelectedMovieId] = useState(null);

  // Fetch genres for filter bar
  const { genres } = useFetchGenres();

  // Fetch movies with search query
  const { movies = [], loading, error } = useFetchMovies(search);

  // Fetch details for selected movie
  const { movie: selectedMovie, loading: loadingDetails } = useFetchMovieDetails(selectedMovieId);

  // Filter movies by genre, year, and rating with error handling
  const filteredMovies = useMemo(() => {
    return movies.filter((movie) => {
      const matchesGenre = selectedGenre ? movie.genre_ids?.includes(Number(selectedGenre)) : true;
      const matchesYear = selectedYear ? movie.release_date?.startsWith(selectedYear) : true;
      const matchesRating = selectedRating ? Math.round((movie.vote_average || 0) / 2) >= Number(selectedRating) : true;
      return matchesGenre && matchesYear && matchesRating;
    });
  }, [movies, selectedGenre, selectedYear, selectedRating]);

  return (
    <main className="container mx-auto px-4 py-8">
      <SearchBar value={search} onChange={setSearch} />
      <FilterBar
        genres={genres}
        selectedGenre={selectedGenre}
        onGenreChange={setSelectedGenre}
        selectedYear={selectedYear}
        onYearChange={setSelectedYear}
        selectedRating={selectedRating}
        onRatingChange={setSelectedRating}
      />
      {loading && <p className="text-center mt-8">Loading movies...</p>}
      {error && <p className="text-center mt-8 text-red-500">{error}</p>}
      <section aria-label="Movie List">
        <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          {filteredMovies.length > 0 ? (
            filteredMovies.map((movie) => (
              <button
                key={movie.id}
                className="text-left p-0 bg-transparent border-none focus:outline-none"
                onClick={() => setSelectedMovieId(movie.id)}
                aria-label={`View details for ${movie.title}`}
              >
                <MovieCard movie={movie} />
              </button>
            ))
          ) : (
            !loading && <p className="col-span-full text-center text-gray-500">No movies found.</p>
          )}
        </div>
      </section>
      {selectedMovieId && (
        <MovieDetails
          movie={selectedMovie}
          onClose={() => setSelectedMovieId(null)}
        />
      )}
    </main>
  );
}


SearchBar.jsx

// src/components/SearchBar.jsx
// Semantic search bar component for entering movie titles or keywords.
// Follows W3C code documentation best practices.
import React from 'react';

/**
 * SearchBar component for entering movie search queries.
 * @param {Object} props
 * @param {string} props.value - Current search input value
 * @param {function} props.onChange - Handler for input change
 * @param {function} props.onSubmit - Handler for form submission
 */
function SearchBar({ value, onChange, onSubmit }) {
  return (
    <form className="w-full flex items-center gap-2 mb-4" onSubmit={onSubmit} role="search" aria-label="Movie search form">
      <label htmlFor="search" className="sr-only">Search Movies</label>
      <input
        id="search"
        name="search"
        type="text"
        className="flex-1 p-2 border rounded focus:outline-none focus:ring focus:border-blue-300"
        placeholder="Search movies..."
        value={value}
        onChange={onChange}
        required
        aria-label="Search movies"
      />
      <button type="submit" className="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">Search</button>
    </form>
  );
}

export default SearchBar;


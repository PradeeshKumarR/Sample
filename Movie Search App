TypeDropdown.jsx

// src/components/TypeDropdown.jsx
// Dropdown filter for movie type (movie, series, episode).
// Follows W3C code documentation best practices.
import React from 'react';

/**
 * TypeDropdown component for filtering movies by type.
 * @param {Object} props
 * @param {string} props.value - Current selected type
 * @param {function} props.onChange - Handler for type change
 */
function TypeDropdown({ value, onChange }) {
  return (
    <div className="mb-4">
      <label htmlFor="type" className="mr-2 font-medium">Type:</label>
      <select
        id="type"
        name="type"
        value={value}
        onChange={onChange}
        className="p-2 border rounded focus:outline-none focus:ring focus:border-blue-300"
        aria-label="Filter by type"
      >
        <option value="">All</option>
        <option value="movie">Movie</option>
        <option value="series">Series</option>
        <option value="episode">Episode</option>
      </select>
    </div>
  );
}

export default TypeDropdown;


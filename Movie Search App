  const handleSelectMovie = (imdbID) => {
    // TODO: Navigate to details page
  };
  const handleFavorite = (movie) => {
    // TODO: Add/remove favorite
  };
  const handlePageChange = (newPage) => setPage(newPage);

  return (
    <main className="max-w-5xl mx-auto p-4">
      <h1 className="text-3xl font-bold mb-4 text-center">Movie Search</h1>
      <TypeDropdown value={type} onChange={handleTypeChange} />
      <SearchBar value={query} onChange={e => setQuery(e.target.value)} onSubmit={handleSearch} />
      <section className="grid grid-cols-2 md:grid-cols-4 gap-4">
        {movies.length === 0 ? (
          <p className="col-span-full text-center text-gray-500">No results found.</p>
        ) : (
          movies.map(movie => (
            <MovieCard
              key={movie.imdbID}
              movie={movie}
              onSelect={handleSelectMovie}
              onFavorite={handleFavorite}
              isFavorite={favorites.some(fav => fav.imdbID === movie.imdbID)}
            />
          ))
        )}
      </section>
      <Pagination currentPage={page} totalPages={totalPages} onPageChange={handlePageChange} />
    </main>
  );
}

export default SearchPage;


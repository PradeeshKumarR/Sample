App.jsx


// App.jsx
// Root component with React Router setup for SearchPage and DetailsPage.
// Follows W3C code documentation best practices.
import React from 'react';
import { Routes, Route } from 'react-router-dom';
import SearchPage from './pages/SearchPage';
import DetailsPage from './pages/DetailsPage';

function App() {
  return (
    <Routes>
      <Route path="/" element={<SearchPage />} />
      <Route path="/movie/:imdbID" element={<DetailsPage />} />
    </Routes>
  );
}

export default App;

============================================================================================================================================================================================================================================================
omdbApi.js

// src/services/omdbApi.js
// Service functions for OMDB API requests.
// Follows W3C code documentation best practices.

const API_KEY = '83fad1c9';
const BASE_URL = 'https://www.omdbapi.com/';

/**
 * Fetch movies from OMDB API by search query and type.
 * @param {string} query - Movie title or keyword
 * @param {string} type - Movie type (movie, series, episode)
 * @param {number} page - Page number
 * @returns {Promise<Object>} - API response
 */
export async function fetchMovies(query, type = '', page = 1) {
  try {
    const url = `${BASE_URL}?apikey=${API_KEY}&s=${encodeURIComponent(query)}${type ? `&type=${type}` : ''}&page=${page}`;
    const response = await fetch(url);
    if (!response.ok) throw new Error('Network response was not ok');
    const data = await response.json();
    if (data.Response === 'False') throw new Error(data.Error);
    return data;
  } catch (error) {
    throw new Error(`Failed to fetch movies: ${error.message}`);
  }
}

/**
 * Fetch detailed movie info from OMDB API by IMDb ID.
 * @param {string} imdbID - IMDb ID of the movie
 * @returns {Promise<Object>} - API response
 */
export async function fetchMovieDetails(imdbID) {
  try {
    const url = `${BASE_URL}?apikey=${API_KEY}&i=${imdbID}&plot=full`;
    const response = await fetch(url);
    if (!response.ok) throw new Error('Network response was not ok');
    const data = await response.json();
    if (data.Response === 'False') throw new Error(data.Error);
    return data;
  } catch (error) {
    throw new Error(`Failed to fetch movie details: ${error.message}`);
  }
}


============================================================================================================================================================================================================================================================
useFavorites.js

// src/hooks/useFavorites.js
// Custom React hook for managing favorite movies.
// Follows W3C code documentation best practices.
import { useState } from 'react';

/**
 * useFavorites custom hook for managing favorite movies.
 * @returns {[Array, Function]} - [favorites, toggleFavorite]
 */
export default function useFavorites() {
  const [favorites, setFavorites] = useState([]);

  /**
   * Toggle a movie as favorite.
   * @param {Object} movie - Movie object
   */
  function toggleFavorite(movie) {
    setFavorites(prev => {
      const exists = prev.some(fav => fav.imdbID === movie.imdbID);
      if (exists) {
        return prev.filter(fav => fav.imdbID !== movie.imdbID);
      } else {
        return [...prev, movie];
      }
    });
  }

  return [favorites, toggleFavorite];
}


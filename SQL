-- 1. Create the ecommerce database
CREATE DATABASE IF NOT EXISTS ecommerce;
USE ecommerce;

-- 2. Create the customers table
CREATE TABLE customers (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    email VARCHAR(100),
    address VARCHAR(255)
);

-- 3. Create the products table
CREATE TABLE products (
    id INT AUTO_INCREMENT PRIMARY KEY,
    name VARCHAR(100),
    price DECIMAL(10,2),
    description VARCHAR(255)
);

-- 4. Create the orders table
CREATE TABLE orders (
    id INT AUTO_INCREMENT PRIMARY KEY,
    customer_id INT,
    order_date DATE,
    total_amount DECIMAL(10,2),
    FOREIGN KEY (customer_id) REFERENCES customers(id)
);

-- 5. Insert sample data into customers
INSERT INTO customers (name, email, address) VALUES
('Alice Smith', 'alice@example.com', '123 Main St'),
('Bob Johnson', 'bob@example.com', '456 Oak Ave'),
('Charlie Lee', 'charlie@example.com', '789 Pine Rd');

-- 6. Insert sample data into products
INSERT INTO products (name, price, description) VALUES
('Product A', 25.00, 'Description for Product A'),
('Product B', 35.00, 'Description for Product B'),
('Product C', 50.00, 'Description for Product C'),
('Product D', 60.00, 'Description for Product D');

-- 7. Insert sample data into orders
INSERT INTO orders (customer_id, order_date, total_amount) VALUES
(1, CURDATE() - INTERVAL 10 DAY, 100.00),
(2, CURDATE() - INTERVAL 40 DAY, 200.00),
(1, CURDATE() - INTERVAL 5 DAY, 150.00),
(3, CURDATE() - INTERVAL 2 DAY, 250.00);

-- 8. Retrieve all customers who have placed an order in the last 30 days
-- This query selects customers with orders in the last 30 days.
SELECT DISTINCT c.*
FROM customers c
JOIN orders o ON c.id = o.customer_id
WHERE o.order_date >= CURDATE() - INTERVAL 30 DAY;

-- 9. Get the total amount of all orders placed by each customer
-- This query sums the total_amount for each customer.
SELECT c.name, SUM(o.total_amount) AS total_spent
FROM customers c
JOIN orders o ON c.id = o.customer_id
GROUP BY c.id, c.name;

-- 10. Update the price of Product C to 45.00
-- This query updates Product C's price.
UPDATE products
SET price = 45.00
WHERE name = 'Product C';

-- 11. Add a new column discount to the products table
-- This query adds a discount column to products.
ALTER TABLE products
ADD COLUMN discount DECIMAL(5,2) DEFAULT 0.00;

-- 12. Retrieve the top 3 products with the highest price
-- This query selects the 3 most expensive products.
SELECT *
FROM products
ORDER BY price DESC
LIMIT 3;

-- 13. Get the names of customers who have ordered Product A
-- First, normalize with an order_items table (see below), but for now, assume a simple join.
-- After normalization, use the order_items table for this query.

-- 14. Join the orders and customers tables to retrieve the customer's name and order date for each order
-- This query joins orders and customers to show order info.
SELECT c.name AS customer_name, o.order_date
FROM orders o
JOIN customers c ON o.customer_id = c.id;

-- 15. Retrieve the orders with a total amount greater than 150.00
-- This query selects orders with total_amount > 150.
SELECT *
FROM orders
WHERE total_amount > 150.00;

-- 16. Normalize: Create order_items table and update orders table
-- Create order_items table to store products per order.
CREATE TABLE order_items (
    id INT AUTO_INCREMENT PRIMARY KEY,
    order_id INT,
    product_id INT,
    quantity INT,
    price DECIMAL(10,2),
    FOREIGN KEY (order_id) REFERENCES orders(id),
    FOREIGN KEY (product_id) REFERENCES products(id)
);

-- Insert sample data into order_items
INSERT INTO order_items (order_id, product_id, quantity, price) VALUES
(1, 1, 2, 25.00),  -- Order 1, Product A
(1, 2, 1, 35.00),  -- Order 1, Product B
(2, 3, 4, 50.00),  -- Order 2, Product C
(3, 1, 1, 25.00),  -- Order 3, Product A
(3, 4, 2, 60.00),  -- Order 3, Product D
(4, 2, 2, 35.00),  -- Order 4, Product B
(4, 3, 1, 45.00);  -- Order 4, Product C

-- 17. Get the names of customers who have ordered Product A (using normalized tables)
-- This query finds customers who ordered Product A.
SELECT DISTINCT c.name
FROM customers c
JOIN orders o ON c.id = o.customer_id
JOIN order_items oi ON o.id = oi.order_id
JOIN products p ON oi.product_id = p.id
WHERE p.name = 'Product A';

-- 18. Retrieve the average total of all orders
-- This query calculates the average order total.
SELECT AVG(total_amount) AS average_order_total
FROM orders;



